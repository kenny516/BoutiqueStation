@model BoutiqueStation.Models.Shop.Achat

@{
ViewData["Title"] = "Insertion Achat";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h2 class="mb-0">Ajouter un nouvel Achat</h2>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" method="post">
                        <!-- Achat ID Field -->
                        <div class="mb-4">
                            <div class="form-floating">
                                <input asp-for="Id" type="text" class="form-control" id="achatIdInput" placeholder="Entrez l'ID de l'achat" required />
                                <label asp-for="Id">ID de l'Achat</label>
                                <span asp-validation-for="Id" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Fournisseur Field -->
                        <div class="mb-4">
                            <div class="form-floating">
                                <select asp-for="IdFournisseur" class="form-select" id="fournisseurSelect" required>
                                    <option value="">Sélectionnez un fournisseur</option>
                                    @foreach (var fournisseur in (List<BoutiqueStation.Models.Shop.Fournisseur>)ViewData["Fournisseurs"])
                                    {
                                    <option value="@fournisseur.Id">@fournisseur.Nom</option>
                                    }
                                </select>
                                <label asp-for="IdFournisseur">Fournisseur</label>
                                <span asp-validation-for="IdFournisseur" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Produit Field -->
                        <div class="mb-4">
                            <div class="form-floating">
                                <select asp-for="IdProduit" class="form-select" id="IdProduit" required>
                                    <option value="">Sélectionnez un Produit</option>
                                    @foreach (var produit in (List<BoutiqueStation.Models.Shop.Produit>)ViewData["Produits"]!)
                                    {
                                    <option value="@produit.Id">@produit.Val</option>
                                    }
                                </select>
                                <label asp-for="IdProduit">Fournisseur</label>
                                <span asp-validation-for="IdProduit" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Quantité Field -->
                        <div class="mb-4">
                            <div class="form-floating">
                                <input asp-for="Quantite" type="number" step="0.01" class="form-control" id="quantiteInput" placeholder="Entrez la quantité" required />
                                <label asp-for="Quantite">Quantité</label>
                                <span asp-validation-for="Quantite" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Montant Field -->
                        <div class="mb-4">
                            <div class="form-floating">
                                <input asp-for="Montant" type="number" step="0.01" class="form-control" id="montantInput" placeholder="Entrez le montant" required />
                                <label asp-for="Montant">Montant</label>
                                <span asp-validation-for="Montant" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Date Field -->
                        <div class="mb-4">
                            <div class="form-floating">
                                <input asp-for="Daty" type="date" class="form-control" id="dateInput" placeholder="Sélectionnez la date" required />
                                <label asp-for="Daty">Date d'Achat</label>
                                <span asp-validation-for="Daty" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-success btn-lg shadow">Enregistrer</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<a href="@Url.Action("Index", "Achat")" class="btn btn-secondary my-4">Retour à la liste des Achats</a>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
