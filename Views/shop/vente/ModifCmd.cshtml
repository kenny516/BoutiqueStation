@using BoutiqueStation.Models.Shop
@model BoutiqueStation.Models.shop.Avoir

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h2 class="mb-0">Modify Sale</h2>
                </div>
                <div class="card-body p-4">
                    <!-- Form with proper model binding to 'Avoir' -->
                    <form asp-action="CreateAvoirForm" method="post">
                        <!-- Quantity Field -->
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Quantite" type="number" step="0.01" class="form-control" id="quantiteInput" placeholder="Enter quantity"/>
                                    <label asp-for="Quantite">Quantity</label>
                                    <span asp-validation-for="Quantite" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- IdVente (Hidden field) -->
                        <input asp-for="IdVente" type="hidden"/>

                        <!-- Submit Button -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-success btn-lg shadow">Modify Sale</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
